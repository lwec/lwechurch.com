{
  "name": "lwechurch.com-hugo-static",
  "version": "1.0.0",
  "description": "source files + webpack build for lwechurch.com-hugo",
  "main": "index.js",
  "repository": "https://github.com/lwec/lwechurch.com",
  "author": "Kai Yao",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "run-s clean webpack:prod hugo:build",
    "clean": "rimraf static/* && rimraf public/*",
    "precommit": "lint-staged && yarn run clean && yarn run build",
    "webpack:dev": "webpack-serve --config=webpack.dev.js --hot",
    "webpack:prod": "webpack --config=webpack.prod.js",
    "hugo:dev": "hugo server --config=config.dev.toml -D",
    "hugo:prod": "hugo server --config=config.toml",
    "hugo:build": "hugo --config=config.toml",
    "start": "run-p start:dev",
    "start:dev": "run-p webpack:dev hugo:dev",
    "start:prod": "run-s build hugo:prod"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote",
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.less": [
      "prettier --write --single-quote",
      "git add"
    ],
    "*.scss": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "lodash": "^4.17.10",
    "rellax": "^1.6.2"
  },
  "devDependencies": {
    "@koa/cors": "^2.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "csv-parse": "^4.4.6",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.1.2",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.2",
    "prettier": "^1.13.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "svg-url-loader": "^2.3.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.9.1",
    "webpack-cli": "^2.1.4",
    "webpack-serve": "^1.0.2",
    "yarn": "^1.7.0"
  }
}
